[
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-collect",
    "exclude_completeness": [
      "{{@ system @}}-{{@ datatype @}}-share"
    ],
    "namespaced_identifiers": false,
    "source": {
      "operation": "list",
      "properties": {
        "datatype": "{{@ datatype @}}"
      },
      "supports_since": true,
      "system": "{{@ system @}}",
      "type": "rest"
    },
    "transform": [
      {
        "properties": {
          "operation_lookup": "{{@ datatype @}}_lookup",
          "operation_lookup_properties": {
            "datatype": "{{@ datatype @}}"
          },
          "primary_key": "Id",
          "rest_system": "{{@ system @}}",
          "share_dataset": "{{@ system @}}-{{@ datatype @}}-share"
        },
        "template": "transform-collect-rest",
        "type": "template"
      }
    ],
    "type": "pipe"
  },
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-share",
    "add_namespaces": false,
    "batch_size": 1,
    "compaction": {
      "keep_versions": 100
    },
    "exclude_completeness": [
      "{{@ system @}}-{{@ datatype @}}-share"
    ],
    "namespaced_identifiers": false,
    "sink": {
      "deletion_tracking": false,
      "set_initial_offset": "onload"
    },
    "source": {
      "dataset": "{{@ system @}}-{{@ datatype @}}-transform",
      "type": "dataset"
    },
    "transform": [
      {
        "properties": {
          "operation_insert": "{{@ datatype @}}_insert",
          "operation_insert_properties": {
            "datatype": "{{@ datatype @}}"
          },
          "operation_lookup": "{{@ datatype @}}_lookup",
          "operation_lookup_properties": {
            "datatype": "{{@ datatype @}}"
          },
          "operation_update_properties": {
            "datatype": "{{@ datatype @}}"
          },
          "primary_key": "Id",
          "rest_system": "{{@ system @}}",
          "rewrite_rules_payload": {
            "alter_payload": [
              [
                "comment",
                "*** Added this custom rule to ensure that we create the payload needed for POv2***"
              ],
              [
                "merge",
                [
                  "dict",
                  "op",
                  "replace",
                  "path",
                  [
                    "concat",
                    "/",
                    [
                      "first",
                      "_S."
                    ]
                  ],
                  "value",
                  [
                    "last",
                    "_S."
                  ]
                ]
              ]
            ],
            "remove_non_payload_properties": [
              [
                "copy",
                "*",
                [
                  "list",
                  "_*",
                  "$*",
                  "Id",
                  "DepartmentId",
                  "BrandingThemeId",
                  "CreatedDateTimeOffset",
                  "DeliveryTermId",
                  "Dim1Id",
                  "Dim2Id",
                  "Dim3Id",
                  "IsCreatedByCurrentIntegration",
                  "LastChangedDateTimeOffset",
                  "LineCount",
                  "LocationId",
                  "NetAmount",
                  "PaymentTermId",
                  "ProjectId",
                  "SalesOrderNo",
                  "SalesPersonEmployeeId",
                  "SalesOrderLines",
                  "TotalAmount",
                  "ProductId"
                ]
              ]
            ],
            "rewrite_update_payload": [
              [
                "add",
                "$payload",
                [
                  "apply",
                  "alter_payload",
                  [
                    "items",
                    [
                      "apply",
                      "remove_non_payload_properties",
                      "_S.$source"
                    ]
                  ]
                ]
              ]
            ]
          },
          "share_dataset": "{{@ system @}}-{{@ datatype @}}-share",
          "truncation_check": false
        },
        "template": "transform-share-rest",
        "type": "template"
      }
    ],
    "type": "pipe"
  }
]