[
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-all",
    "namespaced_identifiers": false,
    "source": {
      "dataset": "{{@ system @}}-salesorders-collect",
      "type": "dataset"
    },
    "transform": {
      "rules": {
        "create-versions": [
          [
            "copy",
            "*"
          ],
          [
            "add",
            "_id",
            [
              "string",
              "_S.Id"
            ]
          ],
          [
            "add",
            "sesam_SalesOrderId",
            "_R._S.Id"
          ],
          [
            "add",
            "$last-modified",
            "_R._S.LastChangedDateTimeOffset"
          ]
        ],
        "default": [
          [
            "create-child",
            [
              "apply",
              "create-versions",
              "_S.SalesOrderLines"
            ]
          ]
        ]
      },
      "type": "dtl"
    },
    "type": "pipe"
  },
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-all2",
    "namespaced_identifiers": false,
    "source": {
      "dataset": "{{@ system @}}-{{@ datatype @}}-all",
      "type": "dataset"
    },
    "transform": {
      "type": "emit_children"
    },
    "type": "pipe"
  },
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-collect",
    "exclude_completeness": [
      "{{@ system @}}-{{@ datatype @}}-share"
    ],
    "namespaced_identifiers": false,
    "source": {
      "dataset": "{{@ system @}}-{{@ datatype @}}-all2",
      "type": "dataset"
    },
    "transform": [
      {
        "properties": {
          "primary_key": "Id",
          "rest_system": "{{@ system @}}",
          "share_dataset": "{{@ system @}}-{{@ datatype @}}-share"
        },
        "template": "transform-collect-rest",
        "type": "template"
      }
    ],
    "type": "pipe"
  },
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-share",
    "add_namespaces": false,
    "batch_size": 1,
    "compaction": {
      "keep_versions": 100
    },
    "exclude_completeness": [
      "{{@ system @}}-{{@ datatype @}}-share"
    ],
    "namespaced_identifiers": false,
    "sink": {
      "deletion_tracking": false,
      "set_initial_offset": "onload"
    },
    "source": {
      "dataset": "{{@ system @}}-{{@ datatype @}}-transform",
      "type": "dataset"
    },
    "transform": [
      {
        "rules": {
          "default": [
            [
              "copy",
              "*"
            ],
            [
              "if",
              [
                "is-not-null",
                "_S.ProductId"
              ],
              [
                "add",
                "$operation",
                "lookup-product"
              ]
            ]
          ]
        },
        "type": "dtl"
      },
      {
        "allowed_status_codes": "100-428,430-599",
        "operation": "lookup-product",
        "response_property": "product_response",
        "response_status_property": "product_status",
        "system": "{{@ system @}}v1",
        "trace": true,
        "trigger_on": {
          "key": "$operation",
          "value": "lookup-product"
        },
        "type": "rest"
      },
      {
        "rules": {
          "default": [
            [
              "copy",
              "*",
              [
                "list",
                "product_response",
                "product_status"
              ]
            ],
            [
              "if",
              [
                "eq",
                "_S.product_status",
                200
              ],
              [
                "add",
                "ProductCode",
                [
                  "first",
                  "_S.product_response.code"
                ]
              ]
            ]
          ]
        },
        "type": "dtl"
      },
      {
        "properties": {
          "operation_delete_properties": {
            "datatype": "salesorders"
          },
          "operation_insert": "{{@ datatype @}}_insert",
          "operation_insert_properties": {
            "datatype": "salesorders"
          },
          "operation_lookup": "{{@ datatype @}}_lookup",
          "operation_lookup_properties": {
            "datatype": "salesorders"
          },
          "operation_update": "{{@ datatype @}}_update",
          "operation_update_properties": {
            "datatype": "salesorders"
          },
          "primary_key": "Id",
          "rest_system": "{{@ system @}}",
          "rewrite_rules_payload": {
            "alter_payload": [
              [
                "comment",
                "*** Added this custom rule to ensure that we create the payload needed for POv2***"
              ],
              [
                "merge",
                [
                  "dict",
                  "op",
                  "replace",
                  "path",
                  [
                    "concat",
                    "/",
                    [
                      "first",
                      "_S."
                    ]
                  ],
                  "value",
                  [
                    "last",
                    "_S."
                  ]
                ]
              ]
            ],
            "remove_non_payload_properties": [
              [
                "copy",
                "*",
                [
                  "list",
                  "_*",
                  "$*",
                  "sesam_SalesOrdersId",
                  "DepartmentId",
                  "Dim3Id",
                  "Id",
                  "LocationId",
                  "NetAmount",
                  "ProjectId",
                  "SellersReferenceEmployeeId",
                  "TotalAmount",
                  "VatAmount",
                  "VatCode",
                  "VatId",
                  "VatRate",
                  "ProductId"
                ]
              ]
            ],
            "rewrite_update_payload": [
              [
                "add",
                "$payload",
                [
                  "apply",
                  "alter_payload",
                  [
                    "items",
                    [
                      "apply",
                      "remove_non_payload_properties",
                      "_S.$source"
                    ]
                  ]
                ]
              ]
            ]
          },
          "share_dataset": "{{@ system @}}-{{@ datatype @}}-share"
        },
        "template": "transform-share-rest",
        "type": "template"
      }
    ],
    "type": "pipe"
  }
]